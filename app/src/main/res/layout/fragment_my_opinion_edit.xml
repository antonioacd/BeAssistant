<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_rounded"
    android:backgroundTint="#FFFFFF">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_user_profile_02_my_opinions_details_02"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline62_my_opinions_details_02"
        app:layout_constraintEnd_toStartOf="@+id/guideline61_my_opinions_details_02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        app:srcCompat="@drawable/defaultprofile" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline61_my_opinions_details_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="86dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline62_my_opinions_details_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="81dp" />

    <EditText
        android:id="@+id/txt_shopBuy_02_my_opinions_details_02"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline28_my_opinions_details_02"
        app:layout_constraintEnd_toStartOf="@+id/guideline63_my_opinions_details_02"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline61_my_opinions_details_02"
        app:layout_constraintTop_toTopOf="@+id/guideline62_my_opinions_details_02"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="87dp"
        android:layout_height="51dp"
        android:layout_margin="16dp"
        android:hint="⭐"
        app:layout_constraintBottom_toTopOf="@+id/guideline62_my_opinions_details_02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="@+id/guideline63_my_opinions_details_02"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005">

        <AutoCompleteTextView
            android:id="@+id/select_rating_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="none"
            android:padding="0dp"
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline28_my_opinions_details_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="181dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline63_my_opinions_details_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="277dp" />

    <EditText
        android:id="@+id/txt_price_02_my_opinions_details_02"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline28_my_opinions_details_02"
        app:layout_constraintEnd_toStartOf="@+id/guideline61_my_opinions_details_02"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline62_my_opinions_details_02"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/txt_toneOrColor_02_my_opinions_details_02"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline28_my_opinions_details_02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline63_my_opinions_details_02"
        app:layout_constraintTop_toTopOf="@+id/guideline62_my_opinions_details_02"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/txt_username_opinion_item_02_my_opinions_details_02"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="5"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline62_my_opinions_details_02"
        app:layout_constraintEnd_toStartOf="@+id/guideline63_my_opinions_details_02"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline61_my_opinions_details_02"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_opinion_02_my_opinions_details_02"
        android:layout_width="371dp"
        android:layout_height="263dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline28_my_opinions_details_02"
        app:layout_constraintVertical_bias="0.464" />

    <TextView
        android:id="@+id/textView_02_my_opinions_details_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lugar de compra:"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_shopBuy_02_my_opinions_details_02"
        app:layout_constraintEnd_toStartOf="@+id/guideline63_my_opinions_details_02"
        app:layout_constraintStart_toStartOf="@+id/guideline61_my_opinions_details_02"
        app:layout_constraintTop_toTopOf="@+id/guideline62_my_opinions_details_02" />

    <TextView
        android:id="@+id/textView5_02_my_opinions_details_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tono o Color:"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_toneOrColor_02_my_opinions_details_02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline63_my_opinions_details_02"
        app:layout_constraintTop_toTopOf="@+id/guideline62_my_opinions_details_02" />

    <TextView
        android:id="@+id/textView6_02_my_opinions_details_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio:"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_price_02_my_opinions_details_02"
        app:layout_constraintEnd_toStartOf="@+id/guideline61_my_opinions_details_02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline62_my_opinions_details_02" />

    <TextView
        android:id="@+id/textView7_02_my_opinions_details_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Opinión:"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_opinion_02_my_opinions_details_02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline28_my_opinions_details_02"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_check_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:clickable="true"
        app:backgroundTint="#3AD692"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_opinion_02_my_opinions_details_02"
        app:layout_constraintVertical_bias="0.292"
        app:srcCompat="@drawable/ic_baseline_check_24" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="626dp" />

</androidx.constraintlayout.widget.ConstraintLayout>